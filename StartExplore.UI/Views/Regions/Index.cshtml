@model IEnumerable<StartExplore.UI.Models.DTO.RegionDto>
@{
}
<h1 class="mt-3">Regions</h1>
<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Code</td>
            <td>Name</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Code</td>
                <td>@region.Name</td>
                <td>
                    <a class="btn btn-light" asp-controller="Regions" asp-action="Edit" asp-route-id="@region.Id">Edit</a>
                    @* <a class="btn btn-danger" asp-controller="Regions" asp-action="Delete" asp-route-id="@region.Id">Delete</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
